---
import "../styles/global.css";

interface Props {
    title?: string;
}

const { title = "AI Voice Sales Trainer" } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="description"
            content="Practice sales calls with AI personas that react realistically to your tone and content."
        />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <title>{title}</title>
    </head>
    <body class="bg-gray-900 text-white">
        <slot />
    </body>
</html>
